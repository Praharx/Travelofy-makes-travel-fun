<% layout('/layouts/boilerplate.ejs') -%>

  <body>
    <div class="max-w-md mx-auto my-5 bg-white p-5 rounded-md shadow-md w-100">
      <h2 class="text-2xl text-green-900 font-semibold mb-8 text-center ">Add New Listing</h2>

      <form action="/listings" method="POST"  data-te-validation-init data-te-active-validation="true"
        autocomplete="off" enctype="multipart/form-data" novalidate>

        <div class="relative mb-3" data-te-input-wrapper-init data-te-validate="input"
          data-te-validation-ruleset="isRequired"
          data-te-invalid-feedback="Title is required">
          <input type="text"
            class="peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-success-900 dark:placeholder:text-sucess-900 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0"
            placeholder="Title" name="listing[title]" />
          <label for="title"
            class="pointer-events-none absolute left-3 top-0 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-success-900 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-success-200 dark:peer-focus:text-success">Title
          </label>
        </div>

        <div class="relative mb-4 flex items-stretch" data-te-input-wrapper-init data-te-validate="input"
          data-te-validation-ruleset="isRequired" data-te-invalid-feedback="Description is required">
          <textarea
            class="peer block min-h-[auto] w-full rounded border-0  px-3 py-[0.32rem] leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-success-900 dark:placeholder:text-success-900 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0"
            name="listing[description]" rows="3" placeholder="decription">
          </textarea>
          <label for="description"
            class="pointer-events-none absolute left-3 top-0 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-success-900 dark:peer-focus:text-">
            Description

          </label>
        </div>

        <p>Upload Listing Image</p>
        <div class="relative mb-3" data-te-input-wrapper-init data-te-validate="input"
          data-te-validation-ruleset="isRequired" data-te-invalid-feedback="Image file is required">
          <input type="file" name="listing[image]">
          
        </div>



        <div class="relative mb-3" data-te-input-wrapper-init data-te-validate="input"
          data-te-validation-ruleset="isNumber" data-te-invalid-feedback="Price of location is required">
          <input type="number"
            class="peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-success-900 dark:placeholder:text-sucess-900 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0"
            placeholder="Add the price:&#8377" name="listing[price]" />
          <label for="price"
            class="pointer-events-none absolute left-3 top-0 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-success-900 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-success-200 dark:peer-focus:text-success">Price
          </label>
        </div>

        <div class="relative mb-3" data-te-input-wrapper-init data-te-validate="input"
          data-te-validation-ruleset="isRequired" data-te-invalid-feedback="Country is required">
          <input type="text"
            class="peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-success-900 dark:placeholder:text-sucess-900 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0"
            placeholder="Add the price:&#8377" name="listing[country]" />
          <label for="country"
            class="pointer-events-none absolute left-3 top-0 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-success-900 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-success-200 dark:peer-focus:text-success">Country
          </label>
        </div>

        <div class="relative mb-3" data-te-input-wrapper-init data-te-validate="input"
          data-te-validation-ruleset="isRequired" data-te-invalid-feedback="Location is required">
          <input type="text"
            class="peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-success-900 dark:placeholder:text-sucess-900 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0"
            placeholder="Add the price:&#8377" name="listing[location]" />
          <label for="location"
            class="pointer-events-none absolute left-3 top-0 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-success-900 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-success-200 dark:peer-focus:text-success">Location
          </label>
        </div>


        <button type="submit" class="bg-green-900 text-white p-2 rounded-md  hover:bg-green-200"
          data-te-submit-btn-ref>Submit</button>
      </form>
    </div>






  </body>