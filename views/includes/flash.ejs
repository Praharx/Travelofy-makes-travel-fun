<% if(success && success.length){ %>
    <div id="successAlert" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative"
        role="alert">

        <span class="block sm:inline bold text-center">
            <%= success%>
        </span>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
            <svg id="closeButton" class="fill-current h-6 w-6 text-green-500" role="button"
                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <title>Close</title>
                <path fill="currentColor"
                    d="M19.39 6.36l-1.415-1.415-5.594 5.593-5.593-5.593-1.415 1.415 5.593 5.593-5.593 5.594 1.415 1.415 5.593-5.594 5.594 5.594 1.415-1.415-5.594-5.594z" />
            </svg>
        </span>
    </div>

<% } %>

<% if(error && error.length){ %>
    <div id="errorAlert" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    
        <span class="block sm:inline bold text-center">
            <%= error%>
        </span>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
            <svg id="closeErrorButton" class="fill-current h-6 w-6 text-black" role="button"
                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <title>Close</title>
                <path fill="currentColor"
                    d="M19.39 6.36l-1.415-1.415-5.594 5.593-5.593-5.593-1.415 1.415 5.593 5.593-5.593 5.594 1.415 1.415 5.593-5.594 5.594 5.594 1.415-1.415-5.594-5.594z" />
            </svg>
        </span>
    </div>

<% } %>

<script>
     document.addEventListener("DOMContentLoaded", function () {
            const successAlert = document.getElementById('successAlert');
            const closeButton = document.getElementById('closeButton');

            closeButton.addEventListener('click', function () {
                successAlert.classList.add('hidden');
            });

        });

        document.addEventListener("DOMContentLoaded", function () {
            const errorAlert = document.getElementById('errorAlert');
            const closeErrorButton = document.getElementById('closeErrorButton');

            if (errorAlert) {
                closeErrorButton.addEventListener('click', function () {
                    errorAlert.style.display = 'none';
                });
            }
                    
        });
</script>